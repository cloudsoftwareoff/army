<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Army" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/army_primary</item>
        <item name="colorPrimaryVariant">@color/army_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/army_secondary</item>
        <item name="colorSecondaryVariant">@color/army_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/army_background</item>
        <!-- Customize your theme here. -->
        <!-- Default text color. -->
        <item name="android:textColor">@color/army_text</item>
        <!-- Button styles. -->
        <item name="buttonStyle">@style/Widget.Army.Button</item>
        <!-- EditText styles. -->
        <item name="editTextStyle">@style/Widget.Army.EditText</item>
        <!-- Toolbar styles. -->
        <item name="toolbarStyle">@style/Widget.Army.Toolbar</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.Army.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/army_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.Army.EditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/army_primary</item>
        <item name="hintTextColor">@color/army_primary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.Army.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/army_primary_variant</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>
